#!/usr/bin/env python2
# coding: utf-8

import socket

class Client():

	def __init__(self):
		print "Construc client"
		self.hote = "192.168.1.22"
		self.port = 12801



	def envoir_msg(self, msg):
		print "---------------------------------------"
		print "TRAME ENVOYEE : " + msg
		print "---------------------------------------"
		self.connection.send(msg)

	def recevoir(self):
		data = self.connection.recv(1024)
		return data
		
	def deconnect(self):
		self.connection.close()

	def connection(self):
		print "tentative de connection"
		retour = False
		try:
			
			self.connection = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
			self.connection.connect((self.hote, self.port))
			print("Connexion Ã©tablie avec le serveur sur le port {}".format(self.port))
			retour = True

		except:
			print "Erreur de connection"
			retour = False

		return retour
			